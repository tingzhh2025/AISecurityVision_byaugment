# AI安防视频监控系统 - 环境配置示例
# 复制此文件为 .env.local 并根据实际情况修改配置

# API基础URL - C++后端服务地址
VITE_API_BASE_URL=http://localhost:8080

# 视频流基础URL - MJPEG流服务地址
VITE_STREAM_BASE_URL=http://localhost:8161

# WebSocket URL - 实时数据推送
VITE_WS_URL=ws://localhost:8080

# 系统配置
VITE_SYSTEM_NAME=AI安防视频监控系统
VITE_SYSTEM_VERSION=1.0.0

# 开发模式配置
VITE_DEV_PORT=3000
VITE_DEV_HOST=0.0.0.0

# 生产模式配置
VITE_PROD_BASE_PATH=/

# 调试配置
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# 摄像头配置
VITE_DEFAULT_CAMERA_USERNAME=admin
VITE_DEFAULT_CAMERA_PASSWORD=sharpi1688
VITE_DEFAULT_RTSP_PORT=554

# 视频流配置
VITE_STREAM_TIMEOUT=10000
VITE_STREAM_RETRY_COUNT=3
VITE_STREAM_RETRY_DELAY=2000

# WebSocket配置
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# UI配置
VITE_DEFAULT_LAYOUT=2x2
VITE_MAX_CAMERAS_PER_VIEW=16
VITE_REFRESH_INTERVAL=30000

# 文件上传配置
VITE_MAX_FILE_SIZE=100MB
VITE_ALLOWED_FILE_TYPES=.mp4,.avi,.mkv,.mov

# 报警配置
VITE_ALERT_SOUND_ENABLED=true
VITE_ALERT_NOTIFICATION_TIMEOUT=5000

# 主题配置
VITE_THEME_PRIMARY_COLOR=#409eff
VITE_THEME_SUCCESS_COLOR=#67c23a
VITE_THEME_WARNING_COLOR=#e6a23c
VITE_THEME_DANGER_COLOR=#f56c6c
